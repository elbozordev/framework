{
  "name": "elbozordev/framework",
  "type": "framework",
  "version": "1.0.0",
  "description": "High-performance MVC Framework for classified services",
  "keywords": ["CRM", "ARM", "CMS", "API", "High-Load", "Classifieds", "Marketplace"],
  "homepage": "https://amedia.uz/framework",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "ramsey/uuid": "^4.7.6",
    "twig/twig": "^3.20.0",
    "spatie/image-optimizer": "^1.8.0",
    "spatie/image": "^3.8.1",
    "php-curl-class/php-curl-class": "^12.0.0",
    "google/apiclient": "^2.18.2",
    "firebase/php-jwt": "^6.11.0",
    "matomo/device-detector": "^6.4.5",
    "guzzlehttp/guzzle": "^7.9.3",
    "symfony/dom-crawler": "^7.2.4",
    "symfony/process": "7.2.5",
    "symfony/css-selector": "^7.2.0",
    "symfony/cache": "^7.2",
    "symfony/validator": "^7.2",
    "symfony/messenger": "^7.2",
    "cocur/slugify": "^4.6.0",
    "monolog/monolog": "^3.5",
    "sentry/sdk": "^4.0",
    "predis/predis": "^2.2",
    "prometheus/client_php": "^2.7",
    "paragonie/sodium_compat": "^1.20",
    "laminas/laminas-escaper": "^2.13",
    "matthiasmullie/minify": "^1.3",
    "psr/simple-cache-implementation": "*",
    "composer-runtime-api": "^2.0",
    "ext-json": "*",
    "ext-ctype": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-hash": "*",
    "ext-iconv": "*",
    "ext-pcre": "*",
    "ext-xml": "*",
    "ext-openssl": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-exif": "*",
    "ext-soap": "*",
    "ext-memcached": "*",
    "ext-mongodb": "*",
    "ext-intl": "*",
    "ext-imagick": "*",
    "ext-redis": "*",
    "ext-zend-opcache": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-strict-rules": "^1.5",
    "friendsofphp/php-cs-fixer": "^3.51",
    "rector/rector": "^1.0",
    "symfony/var-dumper": "^7.2",
    "roave/security-advisories": "dev-latest",
    "brianium/paratest": "^7.3",
    "phpbench/phpbench": "^1.2",
    "mockery/mockery": "^1.6",
    "infection/infection": "^0.27"
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    },
    "files": [
      "App/Helper/Array.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "8.4"
    },
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "test:parallel": "paratest",
    "bench": "phpbench run --report=aggregate",
    "check-style": "php-cs-fixer fix --dry-run --diff",
    "fix-style": "php-cs-fixer fix",
    "analyze": "phpstan analyse",
    "mutation": "infection --threads=4",
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "@composer dump-autoload -o"
    ]
  }
}